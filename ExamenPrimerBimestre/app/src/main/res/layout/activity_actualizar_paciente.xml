<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarPaciente">

    <EditText
        android:id="@+id/edit_ActnombrePaciente"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/edit_Act_id_doctor"
        app:layout_constraintStart_toStartOf="@+id/edit_Act_id_doctor"
        tools:layout_editor_absoluteY="147dp" />

    <TextView
        android:id="@+id/txv_ActedadPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txv_ActnombrePaciente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txv_ActnombrePaciente"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/txv_ActtelefonoPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txv_ActedadPaciente"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="@+id/txv_ActedadPaciente"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/txv_ActnombrePaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txv_id_doctor_Paciente"
        app:layout_constraintStart_toStartOf="@+id/txv_id_doctor_Paciente"
        tools:layout_editor_absoluteY="155dp" />

    <EditText
        android:id="@+id/edit_ActcorreoPaciente"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/edit_Acttelf_paciente"
        app:layout_constraintStart_toStartOf="@+id/edit_Acttelf_paciente"
        tools:layout_editor_absoluteY="320dp" />

    <EditText
        android:id="@+id/edit_Acttelf_paciente"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/edit_ActedadPaciente"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/txv_Actcorreo_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txv_ActtelefonoPaciente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txv_ActtelefonoPaciente"
        tools:layout_editor_absoluteY="336dp" />

    <EditText
        android:id="@+id/edit_ActedadPaciente"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/edit_ActnombrePaciente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_ActnombrePaciente"
        tools:layout_editor_absoluteY="213dp" />

    <Button
        android:id="@+id/btn_Actguardar_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="60dp"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Actcancelar_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/btn_Actguardar_paciente"
        app:layout_constraintTop_toBottomOf="@+id/edit_ActcorreoPaciente"
        app:layout_constraintVertical_bias="0.69" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="ACTUALIZAR PACIENTE"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_id_doctor_Paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Doctor:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/edit_Act_id_doctor"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="101dp" />

    <EditText
        android:id="@+id/edit_Act_id_doctor"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />
</androidx.constraintlayout.widget.ConstraintLayout>