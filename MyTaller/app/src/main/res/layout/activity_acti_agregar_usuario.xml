<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiAgregarUsuario">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="AÑADIR USUARIO"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextnonbre_agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColor="#050505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btn_nuevo_usuario"
        android:layout_width="99dp"
        android:layout_height="46dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FD3A6CEA"
        android:text="CREAR"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescri_agregar" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="99dp"
        android:layout_height="46dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FD3A6CEA"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_nuevo_usuario"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescri_agregar" />

    <EditText
        android:id="@+id/editTextDescri_agregar"
        android:layout_width="374dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descipciòn"
        android:inputType="textMultiLine"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextnonbre_agregar" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="256dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_nuevo_usuario">

        <TextView
            android:id="@+id/textMostrar_id"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textMostrar_nombre"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textMostrarDescr"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextTexid"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/editTextnonbre_agregar"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>