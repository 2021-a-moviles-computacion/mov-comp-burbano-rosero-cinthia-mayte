<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarPaciente">

    <EditText
        android:id="@+id/edit_ActnombrePaciente"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/edit_ced_act"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_ced_act"
        app:layout_constraintTop_toBottomOf="@+id/edit_ced_act" />

    <EditText
        android:id="@+id/edit_ActcorreoPaciente"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/edit_Acttelf_paciente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_Acttelf_paciente"
        app:layout_constraintTop_toBottomOf="@+id/edit_Acttelf_paciente" />

    <EditText
        android:id="@+id/edit_Acttelf_paciente"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/edit_ActedadPaciente"
        app:layout_constraintTop_toBottomOf="@+id/edit_ActedadPaciente" />

    <EditText
        android:id="@+id/edit_ActedadPaciente"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Edad"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/edit_ActnombrePaciente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_ActnombrePaciente"
        app:layout_constraintTop_toBottomOf="@+id/edit_ActnombrePaciente" />

    <Button
        android:id="@+id/btn_Actguardar_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="16dp"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_act_long"
        app:layout_constraintVertical_bias="0.481" />

    <Button
        android:id="@+id/btn_Actcancelar_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_Actguardar_paciente"
        app:layout_constraintTop_toBottomOf="@+id/edit_act_long"
        app:layout_constraintVertical_bias="0.302" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="ACTUALIZAR PACIENTE"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_Act_id_doctor"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Id Doctor"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/edit_ced_act"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Cedula"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edit_Act_id_doctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_Act_id_doctor"
        app:layout_constraintTop_toBottomOf="@+id/edit_Act_id_doctor" />

    <EditText
        android:id="@+id/edit_act_latitud"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edit_ActcorreoPaciente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_ActcorreoPaciente"
        app:layout_constraintTop_toBottomOf="@+id/edit_ActcorreoPaciente" />

    <EditText
        android:id="@+id/edit_act_long"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edit_act_latitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_act_latitud"
        app:layout_constraintTop_toBottomOf="@+id/edit_act_latitud" />
</androidx.constraintlayout.widget.ConstraintLayout>