<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Elementos"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/id_imagen1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" />

            <ImageView
                android:id="@+id/id_imagen2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:layout_marginRight="17dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" />

            <TextView
                android:id="@+id/id_precio1"
                android:layout_width="82dp"
                android:layout_height="21dp"
                android:layout_below="@+id/id_imagen1"
                android:layout_alignStart="@+id/id_imagen1"
                android:layout_alignEnd="@+id/id_imagen1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="68dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_descripcion1"
                android:layout_width="150dp"
                android:layout_height="21dp"
                android:layout_below="@+id/id_precio1"
                android:layout_alignStart="@+id/id_precio1"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_precio2"
                android:layout_width="82dp"
                android:layout_height="21dp"
                android:layout_below="@+id/id_imagen2"
                android:layout_alignStart="@+id/id_imagen2"
                android:layout_alignEnd="@+id/id_imagen2"
                android:layout_marginStart="1dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="59dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_descripcion2"
                android:layout_width="150dp"
                android:layout_height="21dp"
                android:layout_below="@+id/id_precio2"
                android:layout_alignStart="@+id/id_precio2"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="7dp"
                android:text="TextView"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>